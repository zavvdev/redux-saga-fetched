{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "max-len": [
      2,
      {
        "code": 80,
        "ignorePattern": "^import"
      }
    ],
    "indent": [
      "error",
      2
    ],
    "arrow-body-style": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/consistent-type-definitions": [
      "error",
      "type"
    ]
  }
}